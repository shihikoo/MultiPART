@model MultiPART.Models.ViewModel.CohortViewModel

<div class="modal fade" id="create-cohort-modal" role="dialog" tabindex="-1">
    <div class="modal-dialog">
        @using (Ajax.BeginForm("CreateCohortModal",new{},
        new AjaxOptions
        {
            HttpMethod = "Post",
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "cohortList",
            OnSuccess = "dismissClear",
        }, new { id = "createCohortForm", @class = "modalForm" })
        )
        {
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close form-reset" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    Add Cohort
                </div>
                <div class="modal-body col-xs-12">
                    <fieldset>
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.EditorForModel()
                    </fieldset>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default form-reset" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success" id="createCohortBtn">Add</button>
                </div>
            </div>
        }
    </div>
</div>

