@model MultiPART.Models.ViewModel.InstitutionViewModel

@{
    ViewBag.Title = "Edit Institution: " + @Model.InstitutionName;
}
<section class="col-xs-12">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="row col-xs-12">

            @Html.HiddenFor(model => model.InstitutionID)

            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.InstitutionName)

                    @Html.TextBoxFor(model => model.InstitutionName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.InstitutionName)
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.CountryCountryID, "Countries")

                    @Html.DropDownListFor(model => model.CountryCountryID, (SelectList)ViewBag.CountryList, "---- Select Country ----", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CountryCountryID)
                </div>
                <br />
                <div class="row col-xs-12">
                    <div class="col-sm-offset-3">
                        <button type="submit" class="btn btn-warning btn-lg">Save</button>
                        &nbsp;&nbsp;&nbsp;&nbsp;
            <a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-lg btn-default manul-center col-md-3 ">Back</a>
                    </div>
                </div>

            </div>
        </div>
    }
</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
