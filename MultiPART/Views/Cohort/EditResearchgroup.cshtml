@model MultiPART.Models.ViewModel.ResearchgroupCohortAssignmentViewModel

@{
    ViewBag.Title = "Edit Research Group";
}
<section class="col-xs-12">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="row col-xs-12">

            <div class="col-md-8 col-md-offset-2">
                @Html.HiddenFor(model => model.ResearchgroupCohortAssignmentID)
                @Html.HiddenFor(model => model.CohortID)
                @Html.HiddenFor(m => m.MultiPARTProjectID)

                <div class="form-group">

                    @Html.LabelFor(model => model.ResearchgroupID)
                    @Html.DisplayFor(m=>m.ResearchgroupName)
                    @*@Html.DropDownListFor(model => model.ResearchgroupID, (SelectList)ViewBag.ResearchgroupList, "  ----  Select Research Group   ---   ", new { @class = "form-control" })*@
                    @Html.ValidationMessageFor(model => model.ResearchgroupID)

                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.NumberOfAnimals)

                    @Html.TextBoxFor(model => model.NumberOfAnimals, new { @class = "form-control", type = "number" })
                    @Html.ValidationMessageFor(model => model.NumberOfAnimals)
                </div>

                <div class="row col-xs-12">
                    <div class="col-sm-offset-5">
                        <br />
                        <button type="submit" class="btn btn-warning btn-lg">Save</button>
                        &nbsp;&nbsp;&nbsp;&nbsp;
                                <a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-lg btn-default">Back</a>
                    </div>
                    <br />
                </div>

            </div>
        </div>

    }
</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
