@model MultiPART.Models.ViewModel.ResearchgroupViewModel

@{
    ViewBag.Title = "New Research Group";
}

<section class="col-xs-12 row">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
            <div class="form-group">
                @Html.LabelFor(model => model.ResearchgroupName)
                 @Html.TextBoxFor(model => model.ResearchgroupName, new { @class = "form-control" })

                @Html.ValidationMessageFor(model => model.ResearchgroupName)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.InstitutionID)

                @Html.DropDownListFor(model => model.InstitutionID, (SelectList)ViewBag.InstitutionList, "---- Select Institution ----", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.InstitutionID)
            </div>

